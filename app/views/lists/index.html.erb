<nav class="navbar navbar-light justify-content-between">
  <%= link_to "Must Watch", lists_path, class: "navbar-brand" %>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>
<div class="banner">
    <div class="container-fluid">
        <h1>Must Watch</h1>
        <p>List Your Favorite Movies</p>
        <%= link_to "Create A List", new_list_path(@list), class: "button", id: "create" %>
    </div>
</div>
<div class="title alignment">
    <h2>My List</h2>
    <button type="button" data-toggle="collapse" data-target=".card-personal"><i class="fas fa-chevron-down"></i></button>
</div>
<%# <% if @list.present? %>
<div class="cards card-personal alignment">
    <% @lists.each do |list| %>
    <div class="card-category">
        <div class="card-trip-infos">
            <% if list.photo.attached? %>
                <%= link_to list.name, list_path(list) %>
                <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %> 
            <% else %>
                <%= link_to list.name, list_path(list) %>
                <img src="https://source.unsplash.com/random" alt="unsplash" style="width: 300px; height: 300px;"></img>
            <% end %>
        </div>
    </div>
    <% end %>　　
</div>
<%# <% end %>
<div class="title alignment">
    <h2>Recommended List</h2>
    <button type="button" data-toggle="collapse" data-target=".card-recommended"><i class="fas fa-chevron-down"></i></button>
</div>
<div class="cards card-recommended alignment">
    <div class="card-category">
        <div class="card-trip-infos">
        </div>
    </div>　　
</div>
<div class="title alignment">
    <h2>Your Friends' Lists</h2>
    <button id="button" type="button" data-toggle="collapse" data-target=".card-friends"><i class="icon fas fa-chevron-down"></i></button>
</div>
<div class="cards card-friends alignment">
    <div class="card-category">
        <div class="card-trip-infos">
            
        </div>
    </div>　　
</div>
