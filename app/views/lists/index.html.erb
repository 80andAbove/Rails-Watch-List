<div class="banner">
    <div class="container-fluid">
        <h1>Must Watch</h1>
        <p>List Your Favorite Movies</p>
        <%= link_to "Create A List", new_list_path(@list), class: "button", id: "create" %>
    </div>
</div>
<div class="title alignment">
    <h2>My List</h2>
    <button type="button" data-toggle="collapse" data-target=".cards"><i class="fas fa-chevron-down"></i></button>
</div>
<%# <% if @list.present? %>
