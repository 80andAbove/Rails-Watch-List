    <% @lists.each do |list| %>
    <div class="card-category">
        <div class="card-trip-infos">
            <%= link_to list.name, list_path(list) %>
        </div>
    </div>
    <% end %>　　
</div>
<%# <% end %>
<div class="title alignment">
    <h2>Recommended List</h2>
    <button type="button" data-toggle="collapse" data-target=".card-personal"><i class="fas fa-chevron-down"></i></button>
</div>
<div class="cards card-personal alignment">
    <% @lists.each do |list| %>
    <div class="card-category">
        <div class="card-trip-infos">
            <%= link_to list.name, list_path(list) %>
        </div>
    </div>
    <% end %>　　
</div>
<div class="title alignment">
    <h2>Your Friends' Lists</h2>
    <button type="button" data-toggle="collapse" data-target=".card-recommended"><i class="fas fa-chevron-down"></i></button>
</div>
<div class="cards card-recommended alignment">
    <% @lists.each do |list| %>
    <div class="card-category">
        <div class="card-trip-infos">
            <%= link_to list.name, list_path(list) %>
        </div>
    </div>
    <% end %>　　
</div>

<script>
var i = 0;
var images = [];
var slideTime = 3000; // 3 seconds
const banner = document.querySelector('.banner');
console.log(banner);

images[0] = 'https://wallpaperaccess.com/full/329583.jpg';
images[1] = 'https://free4kwallpapers.com/uploads/originals/2019/11/20/bladerunner--movie-scene-wallpaper.jpg';
images[2] = 'https://images.hdqwalls.com/wallpapers/it-2017-movie-4k-34.jpg';

function changePicture() {
    banner.style.background-image = "url(" + images[i] + ")";

    if (i < images.length - 1) {
        i++;
    } else {
        i = 0;
    }
    setTimeout(changePicture, slideTime);
}

window.onload = changePicture;
</script>
